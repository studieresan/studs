#blog-circle {
    text-align: center;
    line-height: 380px;
    width: 200px;
    height: 200px;
    left: 10px;
    top: 8px;
}
#blog-circle > h1 {
    font-size: 50px;
    position: absolute;
    width: 75%;
    top: 50px;
}

#behind-the-blog-circle {
    width: 300px;
    height: 300px;
    text-align: center;
}
#behind-the-blog-circle > h1 {
    position: relative;
    top: 83px;
}
#behind-the-blog-circle > div {
    top: 80px;
    position: relative;
    text-align: center;
    width: 75%;
}
#blog-responsible-image {
    position: relative;
    border-radius: 50%;
    width: 200px;
    left: 60px;
}
#blog-responsible-text {
    position: relative;
    left: 82px;
}

.post {
    padding-bottom: 20px;
    border-bottom: 1px solid #e6e6e6;
    margin-bottom: 20px;
}
.post-content {
    display: block;
    overflow: hidden;
    max-height: 700px;
}
.post-teaser {
    display: block;
}
.post-teaser > p > img {
    display: none;
}
.image-teaser {
    max-height: 200px;
    overflow: hidden;
}
.one-post {
    display: block;
    max-height: 100%;
}


/* Image styles */
.post p {
    clear: both;
    overflow: auto;
    padding-bottom: 15px;
}

.post img {
    width: 100%;
}

.post img.left, .post img.textleft {
    width: 50%;
    float: left;
    padding-right: 15px;
}

.post img.textleft {
    margin-right: 30px;
}

.post img.right, .post img.textright {
    width: 50%;
    float: right;
    padding-left: 15px;
}

.post img.textright {
    margin-left: 30px;
}

/* Images in posts */
.post img {
    max-width: 100%;
}
.post h1 {
    margin-top: 5px;
}
.post h1 a {
    color: #000;
    text-decoration: none;
}
.post h1 a:hover {
    border-bottom: 3px solid #FF35BB;
}
.input.content {
    padding: 0;
}
.post-content > p, .md-preview > p {
    line-height: 150%;
    font-size: 16px;
    margin: 20px 0;
}

.posts .pull-right {
    min-width: 250px;
    text-align: right;
}
a.read-more-open, a.read-more-close {
    font-size: 1.5em;
    padding: 15px;
    display: block;
    background: #333333;
    color: #fff;
    margin-top: 20px;
    text-decoration: none;
    line-height: 22px;
    cursor: pointer;
}

a.read-more-open > i, a.read-more-close > i {
    opacity: 0;
    transition: opacity 0.25s ease-in-out;
}

a.read-more-open:hover > i, a.read-more-close:hover > i {
    opacity: 1;
}
