/* Call to Action */

.call-to-action {
  color: #ffffff;
  background: #0a5175;
  padding: 50px 0;
}

.call-to-action .btn {
  margin: 10px;
}

/* Button styles */

/* General button style (reset) */
.btn {
    border: none;
    font-family: 'Avenir';
    font-size: inherit;
    color: #ffffff;
    background: none;
    cursor: pointer;
    padding: 25px 80px;
    display: inline-block;
    margin: 15px 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    outline: none !important;
    position: relative;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
}

.btn:after {
    content: '';
    position: absolute;
    z-index: -1;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
}

.btn-cerise {
    background: #df288c;
    color: #fff !important;
    box-shadow: 0 6px #c70f74;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
    border-radius: 0 0 5px 5px;
    color: #ffffff;
}

.btn-cerise:hover {
    box-shadow: 0 4px #c70f74;
    top: 2px;
    color: #ffffff;
}

.btn-cerise:active {
    box-shadow: 0 0 #c70f74;
    top: 6px;
    color: #ffffff;
}

.btn-submit {
  padding: 10px 25px;
  margin: 10px 0px;
}

/* Contact */

.contact {
  padding: 50px 0;
}

.contact .heading {
  padding-bottom: 50px;
}

.contact .contact-card {
  width: 340px;
  max-width: 95%;
  margin: auto;
  margin-bottom: 50px;
}

.contact .contact-photo {
  width: 130px;
  margin-right: 30px;
  display: inline-block;
  vertical-align: middle;
}

.contact .contact-details {
  display: inline-block;
  vertical-align: middle;
  text-align: left;
}

/* Footer */

footer {
  padding: 100px 0;
}
