/* Global Styles */

html,
body {
  height: 100%;
  width: 100%;
  font-family: 'HelveticaNeueLight', sans-serif;
  font-size: 15px;
  font-weight: lighter;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'HelveticaNeueThin', sans-serif;
}
  
a {
    color: #4e9bed;
}

a:hover {
    color: #FF35BB;
}

a.no-link-style {
  color: initial;
}

.flash {
  text-align: center;
  margin-bottom: 0px;
  background: #ffffff;
  border: 0;
  border-radius: 0;
}

.alert {
  color: #ff0000;
}

.warning {
  color: #f59000;
}

.notice {
  color: #2f9b11;
}

.content {
  padding-top: 90px;
  padding-bottom: 20px;
}

.vert-text {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.vert-text h1 {
  padding: 0;
  margin: 0;
  font-size: 4.5em;
  font-weight: 700;
}

.form-control-inline {
  display: inline-block;
  width: auto;
}

form .check {
  margin-top: 7px;
}

/* Positioning */
.centered {
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0;
}

/* Navigation bar */
#nav-container {
    font-family: 'HelveticaNeueThin', sans-serif;
    height: 70px;
    width: 100%;
    background-color: rgba(246, 246, 246, 0.95);
    position: fixed;
    top: 0px;
    z-index: 10;
}

#nav-container > * {
    position: absolute;
}

#nav-logo {
    padding: 5px;
    height: 70px;
}

.hide-nav-logo {
  display: none;
}

#nav-list {
    padding: 0px;
    top: 34px;
    left: auto;
    right: 0;
}

#nav-list > li {
    font-size: 21px;
    display: inline;
    padding-right: 20px;
}

#nav-list > li > a {
    text-decoration: none;
    color: #777777;
}

#nav-list > li > a:hover {
    color: #aaaaaa;
}

#nav-list > li > a.active {
    color: #FF35BB;
}

#nav-dropdown {
    opacity: 0.95;
}

#nav-dropdown > li {
    font-size: 16px;
    background-color: #FFFFFF;
    text-align: right;
}

#nav-dropdown > li > a {
    color: #777777;
}

#nav-dropdown > li > a:hover {
    background-color: #FFA3E4;
}

@media (max-width: 600px) {

  #nav-logo-link {
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
  }

  #nav-logo {
    height: 40px;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
  }

  #nav-list {
    text-align: justify;
    width: 100%;
    height: 30px;
  }

  #nav-list:after {
    content: '';
    display: inline-block;
    width: 100%;
  }

  #nav-list > li {
    padding: 0px 10px 0px 10px;
    display: inline-block;
  }
}

@media (max-width: 400px) {
  #nav-list > li {
    padding-top: 5px;
