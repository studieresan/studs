.instagram-img-container {
  position: relative;
  overflow: auto;
}

.instagram-img-container > div {
  position: relative;
}

.instagram-img-container > div > p {
  opacity: 0;
  position: absolute;
  opacity: 0;
  transition: opacity 0.25s ease-in-out;
  cursor: default;
}

